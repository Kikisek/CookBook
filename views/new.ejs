<% include ./partials/header %>


<div class="container mt-5" id="newFormContainer">
    <h1>Add A New Recipe</h1>
    <form action="/recipes" method="POST" id="addForm">
        <div class="form-group mt-3">
            <label class="form-control-label" for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Spaghetti">
        </div>
        <div class="form-group">
            <label class="form-control-label" for="image">Image</label>
            <input type="url" class="form-control" id="image" name="image" placeholder="image url">
        </div>
        <div class="form-row ingredientsForm">
            <div class="form-group col-md-3">
                <label class="form-control-label">Ingredient
                    <input type="text" class="form-control" name="ingredients[ingredient]" placeholder="spaghetti">
                </label>
            </div>
            <div class="form-group col-md-3">              
                <label class="form-control-label">Amount
                    <input type="number" class="form-control" name="ingredients[amount]" placeholder="0">
                </label>
            </div>
            <div class="form-group col-md-3">
                <label class="form-control-label">Unit
                    <select class="form-control custom-select" name="ingredients[unit]">
                        <option>g</option>
                        <option>lb</option>
                        <option>oz</option>
                        <option>ml</option>
                        <option>teaspoon</option>
                        <option>tablespoon</option>
                        <option>fl oz</option>
                        <option>cup</option>
                    </select>
                </label>
            </div>
            <div class="form-group col-md-3 my-4 pl-5">           
                <button type="button" class="form-control btn btn-regular removeIngredientBtn">Remove</button>
            </div>
        </div>
        <div class="form-group col-md-2 pl-0">  
                <button type="button" class="form-control btn btn-regular" id="addIngredientBtn">Add</button>
        </div>
        <div class="form-group">
            <label class="form-control-label" for="directions">Directions</label>
            <textarea class="form-control" id="directions" name="directions" rows="3" placeholder="steps for preparation"></textarea>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label class="form-control-label" for="servings">Number of servings</label>
                <input type="number" class="form-control" id="servings" name="servings" placeholder="0">
            </div>
            <div class="form-group col-md-4">              
                <label class="form-control-label" for="prepTime">Preparation Time</label>
                <input type="time" class="form-control" id="prepTime" name="prepTime" placeholder="1:30">
            </div>
            <div class="form-group col-md-4">
                <label class="form-control-label" for="cookingTime">Cooking Time</label>
                <input type="time" class="form-control" id="cookingTime" name="cookingTime" placeholder="0:30">
            </div>
        </div>
        <button type="submit" class="btn btn-regular">Submit</button>
    </form>
</div>

<% include ./partials/footer %>