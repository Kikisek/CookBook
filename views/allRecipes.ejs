<% include ./partials/header %>

<div class="jumbotron jumbotron-fluid py-4">
    <div class="container">
    <h1 class="display-5">CookBook</h1>
    <p class="lead">This is a simple site where I can easily navigate through my personal collection of recipes.</p>
    <hr class="my-3">
    <p>The work is still in progress, additional features will be added shortly!</p>
    <p class="lead">
        <a class="btn btn-regular btn-md" href="/recipes/new" role="button">Add New Recipe</a>
    </p>
    </div>
</div>

<div class="container" id="recipes-card-container">
    <div class="grid card-columns">
        <% recipes.forEach(function(recipe){ %>
            <div class="card">
                <a href="/recipes/<%= recipe._id %>"><img class="card-img-top" src="<%= recipe.image %>"></a>
                <div class="card-body">
                    <a href="/recipes/<%= recipe._id %>"><h4 class="card-title"><%= recipe.title %></h4></a>
                    <ul class="card-text">
                        <% for (var i = 0; i < recipe.ingredients.length; i++){ %>
                        <li><%= recipe.ingredients[i].amount + " " + recipe.ingredients[i].unit + " " + recipe.ingredients[i].name %></li>
                        <% }; %>
                    </ul>
                    <div class="chevron">
                        <i class="fa fa-chevron-down" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        <% }); %> 
    </div>
</div>

<% include ./partials/footer %>